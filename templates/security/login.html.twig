{% extends 'base_plain.html.twig' %}

{% block title %}Accedi - ELaRA{% endblock %}

{% block pageContent %}
<div class="flex items-center justify-center min-h-[60vh]">
    <div class="card w-full max-w-md bg-base-100 border border-base-300 shadow">
        <div class="card-body space-y-4">
            <div class="flex items-center gap-3">
                <img src="{{ asset('img/logo.png') }}" alt="ELaRA" class="w-12 h-12">
                <div>
                    <p class="text-lg font-semibold">ELaRA</p>
                    <p class="text-sm opacity-70">Autenticazione richiesta</p>
                </div>
            </div>

            {% if error %}
                <div class="alert alert-error text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="space-y-4">
                <div class="form-control w-full">
                    <input
                        type="email"
                        name="email"
                        value="{{ last_username }}"
                        class="input input-bordered w-full"
                        placeholder="Email"
                        required
                        autofocus
                    >
                </div>

                <div class="form-control w-full">
                    <input
                        type="password"
                        name="password"
                        class="input input-bordered w-full"
                        placeholder="Password"
                        required
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-full" type="submit">
                    Entra
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
