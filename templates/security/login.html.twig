{% extends 'base.html.twig' %}

{% block title %}Accedi - ELaRA{% endblock %}

{% block pageContent %}
<div class="flex items-center justify-center min-h-[60vh]">
    <div class="card w-full max-w-md bg-base-100 border border-base-300 shadow">
        <div class="card-body space-y-4">
            <h1 class="card-title text-xl">Accedi</h1>

            {% if error %}
                <div class="alert alert-error text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="space-y-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input type="email" name="email" value="{{ last_username }}" class="input input-bordered" required autofocus>
                </div>

                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input type="password" name="password" class="input input-bordered" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-full" type="submit">
                    Entra
                </button>
            </form>
        </div>
    </div>
{% endblock %}
