<!DOCTYPE html>
<html data-theme="business" lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{% block title %}ELaRA - Embedding Linking and Retrieval Answering{% endblock %}</title>
    
    <link rel="icon" href="{{ asset('img/favicon.ico') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('img/favicon-16.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('img/favicon-32.png') }}">
    <link rel="icon" type="image/png" sizes="48x48" href="{{ asset('img/favicon-48.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('img/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('img/android-chrome-192.png') }}">
    <link rel="icon" type="image/png" sizes="512x512" href="{{ asset('img/android-chrome-512.png') }}">
    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}">

    {% block stylesheets %}
    {% endblock %}


    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

    <div class="drawer lg:drawer-open">
        <input id="my-drawer-4" type="checkbox" class="drawer-toggle"/>

        <!-- CONTENUTO PAGINA -->
        <div class="drawer-content flex flex-col min-h-screen">
            <nav class="navbar w-full bg-base-300 sticky top-0 z-30">
                <!-- Bottone: visibile solo su schermi piccoli -->
                <div class="flex-none lg:hidden">
                    <label for="my-drawer-4"
                           aria-label="open sidebar"
                           class="btn btn-square btn-ghost drawer-button">
                        <!-- icona -->
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                             stroke-linejoin="round" stroke-linecap="round"
                             stroke-width="2" fill="none" stroke="currentColor"
                             class="my-1.5 inline-block size-4">
                            <path d="M4 6h16"></path>
                            <path d="M4 12h16"></path>
                            <path d="M4 18h16"></path>
                        </svg>
                    </label>
                </div>

                <div class="flex-none px-4">
                    <img src="{{ asset('img/elara-logo.png') }}" width="64" alt="logo">
                </div>
                <div class="flex-none text-[42px]">
                    <code><b><em>ELaRA</em></b></code>
                </div>

                <div class="flex-1"></div>

                <div class="flex-none px-4">
                    {% if app.user %}
                        <div class="flex items-center gap-2">
                            <img src="{{ app.user.gravatarUrl(32) }}"
                                 alt="avatar"
                                 class="w-8 h-8 rounded-full border border-base-300">
                            <span class="text-sm opacity-80">{{ app.user.userIdentifier }}</span>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <span class="badge badge-error badge-outline badge-sm">Super Admin</span>
                            {% elseif is_granted('ROLE_ADMIN') %}
                                <span class="badge badge-warning badge-outline badge-sm">Admin</span>
                            {% endif %}
                            <form method="post" action="{{ path('app_logout') }}">
                                <button class="btn btn-sm btn-outline">Logout</button>
                            </form>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline">Login</a>
                    {% endif %}
                </div>
            </nav>

            <div class="p-4">

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div role="alert" class="alert alert-{{ label }} alert-outline">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block pageContent %}{% endblock %}
            </div>

            {#
            <footer class="footer sm:footer-horizontal footer-center bg- text-base-content p-4 sticky top-[100vh]">
                <aside>
                    <p>Space Wolf</p>
                </aside>
            </footer>
            #}

            {# FOOTER SEMPLICE #}
            <footer class="p-5 border-base-300 text-xs opacity-70 flex flex-wrap justify-between gap-2 sticky top-[100vh] pr-15">
                <span>ELaRA — Motore RAG interno · Symfony 7.4</span>
                <span>Stack: PostgreSQL · pgvector · Tailwind · DaisyUI</span>
            </footer>

        </div>

        <!-- SIDEBAR -->
        {{ include('layout/_sidebar.html.twig') }}
    </div>

    <!-- modulo javascript per la visualizzazione di diagrammi mermaid nel rendering di file markdown -->
    <script type="module">
        import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';

        // 2. Configura e inizializza
        mermaid.initialize({ startOnLoad: false });

        // 3. Trova i blocchi CommonMark e trasformali per Mermaid
        document.addEventListener("DOMContentLoaded", function() {
            // CommonMark crea <pre><code class="language-mermaid">
            // Mermaid vuole <div class="mermaid"> o <pre class="mermaid">
            
            const blocks = document.querySelectorAll('pre code.language-mermaid');
            
            blocks.forEach((block) => {
                // Prendi il codice dentro
                const graphDefinition = block.textContent;
                
                // Crea un nuovo div che piace a Mermaid
                const newDiv = document.createElement('div');
                newDiv.className = 'mermaid';
                newDiv.textContent = graphDefinition;
                
                // Sostituisci il blocco <pre> con il nuovo <div>
                block.parentNode.replaceWith(newDiv);
            });

            // 4. Ora che il DOM è giusto, fai partire il rendering
            mermaid.run();
        });
    </script>

</body>
</html>
