<!DOCTYPE html>
<html data-theme="business" lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{% block title %}ELaRA - Embedding Linking and Retrieval Answering{% endblock %}</title>
    {#
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    #}
    <link rel="icon" href="{{ asset('img/favicon.ico') }}">
    {% block stylesheets %}
    {% endblock %}


    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>

    <div class="drawer lg:drawer-open">
        <input id="my-drawer-4" type="checkbox" class="drawer-toggle"/>

        <!-- CONTENUTO PAGINA -->
        <div class="drawer-content flex flex-col min-h-screen">
            <nav class="navbar w-full bg-base-300 sticky top-0 z-30">
                <!-- Bottone: visibile solo su schermi piccoli -->
                <div class="flex-none lg:hidden">
                    <label for="my-drawer-4"
                           aria-label="open sidebar"
                           class="btn btn-square btn-ghost drawer-button">
                        <!-- icona -->
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                             stroke-linejoin="round" stroke-linecap="round"
                             stroke-width="2" fill="none" stroke="currentColor"
                             class="my-1.5 inline-block size-4">
                            <path d="M4 6h16"></path>
                            <path d="M4 12h16"></path>
                            <path d="M4 18h16"></path>
                        </svg>
                    </label>
                </div>

                <div class="flex-none px-4">
                    <img src="{{ asset('img/elara-logo.png') }}" width="48" alt="logo">
                </div>
                <div class="flex-none text-[42px]">
                    <code><b>EL<i>a</i>RA</b></code>
                </div>

                <div class="flex-1"></div>

                <div class="flex-none px-4">
                    {% if app.user %}
                        <div class="flex items-center gap-2">
                            <img src="{{ app.user.gravatarUrl(32) }}"
                                 alt="avatar"
                                 class="w-8 h-8 rounded-full border border-base-300">
                            <span class="text-sm opacity-80">{{ app.user.userIdentifier }}</span>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <span class="badge badge-error badge-outline badge-sm">Super Admin</span>
                            {% elseif is_granted('ROLE_ADMIN') %}
                                <span class="badge badge-warning badge-outline badge-sm">Admin</span>
                            {% endif %}
                            <form method="post" action="{{ path('app_logout') }}">
                                <button class="btn btn-sm btn-outline">Logout</button>
                            </form>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline">Login</a>
                    {% endif %}
                </div>
            </nav>

            <div class="p-4">

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div role="alert" class="alert alert-{{ label }} alert-outline">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block pageContent %}{% endblock %}
            </div>

            {#
            <footer class="footer sm:footer-horizontal footer-center bg- text-base-content p-4 sticky top-[100vh]">
                <aside>
                    <p>Space Wolf</p>
                </aside>
            </footer>
            #}

            {# FOOTER SEMPLICE #}
            <footer class="p-5 border-base-300 text-xs opacity-70 flex flex-wrap justify-between gap-2 sticky top-[100vh] pr-15">
                <span>ELaRA — Motore RAG interno · Symfony 7.3</span>
                <span>Stack: PostgreSQL · pgvector · Tailwind · DaisyUI</span>
            </footer>

        </div>

        <!-- SIDEBAR -->
        {{ include('layout/_sidebar.html.twig') }}
    </div>

</body>
</html>
